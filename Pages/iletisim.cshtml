@page
@model iletisim
@{
    ViewData["Title"] = "İletisim";
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lezzet Haritası</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="iletisim.css">
    <link rel="stylesheet" href="style.css">

  </head>
  <body>
  

<div class="iletisimFormu">
    <h1>Benimle İletişime Geç </h1>
    <img class="resimI" src="resimİletisim.jpg" alt="profil">

<div class="formIcerik"> <form id="contact-form" method="post">
        <label for="name">Ad Soyad</label>
    <input type="text" id="name" name="name" required>
        <label for="email">Email Adres</label>
    <input type="email" id="email" name="email" required>
        <label for="message">Mesaj</label>
    <textarea rows="6" id="message" name="message" required></textarea>
        <button type="submit" id="submit" name="submit">Gönder</button>
    </form> </div>
    <div id="error"></div>
      <div id="success-msg"></div>          
</div>
</body>
</html>